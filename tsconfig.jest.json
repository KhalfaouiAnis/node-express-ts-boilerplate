{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["jest"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "module": "nodenext",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@libs/*": ["libs/*"],
      "@utils/*": ["utils/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
