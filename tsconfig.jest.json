{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["jest"],
    "module": "nodenext",
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@libs/*": ["libs/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
